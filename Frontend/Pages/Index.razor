@page "/"
@inject IPostInterface postInterface
<div class="row">
    <div class="col-2">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">My Account</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/CreatePost">New Post</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">My Posts</a>
            </li>

        </ul>
    </div>
    <div class="col-6">
        @if (isLoading)
        {
            <button class="btn btn-primary" type="button" disabled>
                <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
                <span class="visually-hidden" role="status">Loading...</span>
            </button>
            <button class="btn btn-primary" type="button" disabled>
                <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
                <span role="status">Loading...</span>
            </button>
        }
        else
        {
            <div class="row">
                @foreach (var post in Posts)
                {
                    <div class="card m-2 p-2 shadow-lg" style="width: 16rem; height:350px;">
                        <img src="@post.Body" class="card-img-top" alt="..." style="height:200px;">
                        <div class="card-body">
                            <h5 class="card-title">@post.Title</h5>

                            <p class="card-text">@post.CreatedAt</p>
                            <a class="btn btn-primary" @onclick="(() => viewSinglePost(post.PostId))">View Post</a>
                            <a class="btn btn-primary">Comment</a>
                        </div>
                    </div>


                }
            </div>

        }
    </div>
    @if (showPost)
    {
        <div class="col-4">
            <div class="card m-2 p-2">
                <img src="@selectedPost.Body" class="card-img-top" alt="@selectedPost.Title">
                <div class="card-body">
                    <h5 class="card-title">@selectedPost.Title</h5>
                    @*@if (selectedPost.Comments.Count() == 0)
                    {
                        <p class="card-text">No comments yet</p>
                    }
                    else
                    {
                        <p class="card-text">@selectedPost.Comments.ToList()</p>
                    }*@
                </div>
                @*actions to delete or edit post*@
                <div class="d-flex align-items-center ">
                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
                        <style>
                            svg {
                                fill: #000
                            }</style>
                        <path d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.7 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160V416c0 53 43 96 96 96H352c53 0 96-43 96-96V320c0-17.7-14.3-32-32-32s-32 14.3-32 32v96c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V160c0-17.7 14.3-32 32-32h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H96z" />
                    </svg><a>Edit</a>
                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512">
                        <style>
                            svg {
                                fill: #ff0000
                            }</style>
                        <path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z" />
                    </svg><a>Delete</a>
                 </div>
            </div>
        </div>
    }
    else
    {
        <div class="col-4">
            <h1>Click on a post to view it</h1>
        </div>
    }

</div>
@code {
    private List<PostDto> Posts = new List<PostDto>();
    private bool isLoading = true;
    private bool showPost = false;
    private PostDto selectedPost = new PostDto();
    protected override async Task OnInitializedAsync()
    {
        Posts = await postInterface.GetAllPostsAsync();
        isLoading = false;
    }

    // show single post
    private async void viewSinglePost(Guid id)
    {
        selectedPost = await postInterface.GetPostById(id);
        showPost = true;
    }
}